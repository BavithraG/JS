        <input placeholder="Subject 1" id = "x1"/> <br>
            <input placeholder="Subject 2" id = "x2"/> <br>
            <input placeholder="Subject 3" id = "x3"/> <br>
            <input type = "submit" value = "Sum" onclick = "calc()"/>
            <input type = "submit" value = "Average" onclick = "avg()"/>
        <script>
            var x1, x2, x3, y, z;
            
            z=y/3;
            function calc(){
                x1 = document.getElementById("x1").value
                x2 = document.getElementById("x2").value
                x3 = document.getElementById("x3").value
                y=(parseInt(x1)+parseInt(x2)+parseInt(x3))
                console.log(y)
            }
            function avg(){
                x1 = document.getElementById("x1").value
                x2 = document.getElementById("x2").value
                x3 = document.getElementById("x3").value
                z = ((parseInt(x1)+parseInt(x2)+parseInt(x3))/2);
                console.log(z)
            }
            
        </script>
